<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpBusinessFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="421dp"
        android:layout_height="204dp"
        android:contentDescription="@string/app_logo_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_transparent" />

    <EditText
        android:id="@+id/sign_up_buisiness_email"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/sign_up_buisiness_pass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_buisiness_email"
        app:layout_constraintStart_toStartOf="@+id/sign_up_buisiness_email"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_buisiness_email" />

    <Button
        android:id="@+id/sign_up_buisiness_sign_up_button"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF"
        android:text="@string/sign_up_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_buisiness_phone" />

    <TextView
        android:id="@+id/sign_up_buisiness_not_trainer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_trainer_text"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_buisiness_regular_user_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_buisiness_sign_up_button"
        app:layout_constraintVertical_bias="0.956" />

    <Button
        android:id="@+id/sign_up_buisiness_regular_user_button"
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:text="@string/register_regular_user_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sign_up_buisiness_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/mobile_text"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_buisiness_pass"
        app:layout_constraintStart_toStartOf="@+id/sign_up_buisiness_pass"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_buisiness_pass" />
</androidx.constraintlayout.widget.ConstraintLayout>