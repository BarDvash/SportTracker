<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="11"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recent_workout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="Workout Name" />

        <TextView
            android:id="@+id/recent_workout_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2019-03-28 at 17:03" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:contentDescription="recent_workout_icon"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_training" />

</LinearLayout>