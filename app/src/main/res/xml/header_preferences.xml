<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:icon="@drawable/ic_security_24dp"
        app:key="privacy_and_security_category"
        app:title="Privacy and security">

        <Preference
            app:key="privacy_policy"
            app:title="privacy policy">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://fitracker.flycricket.io/privacy.html" />
        </Preference>

        <Preference
            app:key="reset password"
            app:title="reset password" />


    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_notifications_24dp"
        app:key="notifications_category"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable message notifications" />

    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_help_24dp"
        app:key="help_category"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback" />

    </PreferenceCategory>


    <PreferenceCategory
        app:icon="@drawable/ic_info_24dp"
        app:key="about_category"
        app:title="About">


        <Preference
            app:fragment="android.technion.fitracker.SettingsActivity$AboutFragment"
            app:key="credits_header"
            app:summary="Attribution for external materials"
            app:title="@string/credits_header" />

    </PreferenceCategory>

</PreferenceScreen>
